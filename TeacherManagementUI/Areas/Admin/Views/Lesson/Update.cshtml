@model UpdateLessonDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ders İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="LessonId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ders Güncelleme Ekranı</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="lesson">Ders Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="LessonName" id="lesson" required>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="code">Ders Kodu</label>
                                <input type="text" class="form-control" asp-for="LessonCode" id="code">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="teacher">Eğitmen Bilgisi Seçiniz</label>
                                <select asp-items="@ViewBag.teacher" asp-for="TeacherId" class="form-control">
                                    <option>Eğitmen Seçin</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-warning">Dersi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

