@model CreateTeacherDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Eğitmen İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Eğitmen Kartı Oluşturma Ekranı</div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label for="teacher">Eğitmen Ad Soyad Giriniz</label>
                                <input type="text" class="form-control" asp-for="TeacherNameSurname" id="teacher" required>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="brach">Eğitmen Branşı </label>
                                <input type="text" class="form-control" asp-for="TeacherBranch" >
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="tel">Eğitmen Telefon Numarası</label>
                                <input type="tel" class="form-control" asp-for="TeacherPhone" >
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Eğitmen Mail Adresi </label>
                                <input type="email" class="form-control" asp-for="TeacherEmail">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Eğitmen Bilgisi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





