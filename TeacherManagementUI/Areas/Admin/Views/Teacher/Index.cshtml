@model IEnumerable<ResultTeacherDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Eğitmen Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Eğitmen ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Eğitmen Ad Soyad</th>
                                        <th scope="col">Eğitmen Branşı</th>
                                        <th scope="col">Telefon</th>
                                        <th scope="col">Mail</th>
                                        <th scope="col">Güncelle</th>
                                        <th scope="col">Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.TeacherNameSurname</td>
                                            <td>@item.TeacherBranch</td>
                                            <td>@item.TeacherPhone</td>
                                            <td>@item.TeacherEmail</td>
                                            <td><a href="/Admin/Teacher/Update/@item.TeacherId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td> <button onclick="deleteTeacher(@item.TeacherId)" class="btn btn-outline-danger">Sil</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/Teacher/Create/" class="btn btn-outline-primary">Yeni Eğitmen Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<script>

    function deleteTeacher(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Teacher/Delete/" + id;
            }
        });
    }
</script>